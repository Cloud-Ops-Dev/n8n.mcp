# PostgreSQL Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=n8n

# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678

# n8n Basic Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme_secure_password

# Execution Timeouts (in seconds)
EXECUTIONS_TIMEOUT=300
EXECUTIONS_TIMEOUT_MAX=3600

# Timezone
TZ=America/New_York

# n8n API Configuration (for MCP integration)
N8N_API_KEY=your_api_key_here_generate_in_n8n_ui

# ============================================
# Cloud Provider Credentials
# ============================================

# AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# IBM Cloud Credentials
IBM_CLOUD_API_KEY=your_ibm_cloud_api_key
IBM_CLOUD_REGION=us-south

# ============================================
# Server Connection Details
# ============================================

# AMD Workstation
AMD_HOST=192.168.1.x
AMD_SSH_PORT=22
AMD_SSH_USER=your_username
AMD_SSH_KEY_PATH=/path/to/ssh/key

# IBM Cloud Server
IBM_SERVER_IP=your_ibm_server_ip
IBM_SSH_USER=root
IBM_SSH_KEY_PATH=/path/to/ibm/ssh/key

# AWS EC2 Instance
AWS_SERVER_IP=your_aws_instance_ip
AWS_SSH_USER=ec2-user
AWS_SSH_KEY_PATH=/path/to/aws/ssh/key

# ============================================
# Optional: Monitoring & Logging
# ============================================

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=

# Email notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
